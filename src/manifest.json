{
  "manifest_version": 2,
  "name": "NextComic",
  "version": "0.1",
  "developer": {
    "name": "bytesized",
    "url": "https://github.com/bytesized/NextComic"
  },
  "description": "Allows arrow key control for webcomic viewing",

  "icons": {
    "48": "icon/standard.svg",
    "96": "icon/standard.svg"
  },

  "browser_action": {
    "default_icon": "icon/small.svg",
    "default_title": "NextComic",
    "default_popup": "browser_action/popup.html"
  }
}
